<div id="items">
<table>
	{% if (items) %}
		{% for item in items %}
			<tr>
				<th>
					<span>主旨：{{ item.getTitle() }}</span>
				</th>
				<th>
					<span>公告日期：{{ item.getPostedTime() | date('Y/m/d') }}</span>
				</th>
			</tr>
        	<tr>
    			<td colspan=2>
        			<p>{{ item.getDescription() | raw }}</p>
        		</td>
        	</tr>
		{% endfor %}
    {% endif %}
</table>
{% if (more) %}
	<a href="{{ more }}">更多...</a>
{% endif %}
</div>